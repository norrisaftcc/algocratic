    <script>
        // Add cursor to title
        document.querySelector('.site-title').innerHTML += '<span class="cursor"></span>';

        // System status randomizer
        setInterval(() => {
            const statuses = ['OPTIMAL', 'PROCESSING', 'ANALYZING', 'MONITORING'];
            const values = document.querySelectorAll('.status-value');
            const randomIndex = Math.floor(Math.random() * values.length);
            const randomStatus = statuses[Math.floor(Math.random() * statuses.length)];
            
            if (Math.random() > 0.7) {
                values[randomIndex].textContent = randomStatus;
                values[randomIndex].style.color = 'var(--warning-color)';
                setTimeout(() => {
                    values[randomIndex].style.color = 'var(--text-primary)';
                }, 1000);
            }
        }, 3000);

        // Binary background generator
        function updateBinary() {
            const binary = document.querySelector('.binary-decoration');
            let newBinary = '';
            for (let i = 0; i < 160; i++) {
                newBinary += Math.random() > 0.5 ? '1' : '0';
            }
            binary.textContent = newBinary;
        }
        setInterval(updateBinary, 5000);
    </script>
